%h2 PETS Administration

.row
  = render partial: 'agencies/agency', object: @agency

  .col-sm-2.col-sm-offset-10#table_action_button
    = button_to 'Edit Agency', edit_agency_path(@agency), method: :get, |
                             class: 'btn btn-primary btn-sm pull-right' |

.row
  = render partial: 'branches/branches', object: @agency.branches

.row
  - if @agency.branches.empty?
    .col-sm-2.col-sm-offset-10#table_action_button
      = button_to 'Add Branch', new_agency_branch_path(@agency.id), |
                 method: :get, |
                 class: 'btn btn-primary btn-sm pull-right'        |
  - else
    .col-sm-3.col-sm-offset-3
      %a(data-toggle='collapse' href='#branches_table'
          aria-expanded='true' aria-controls='branches_table')
        Show/Hide Branches
    .col-sm-2.col-sm-offset-4#table_action_button
      = button_to 'Add Branch', new_agency_branch_path(@agency.id), method: :get, |
                            class: 'btn btn-primary btn-sm pull-right'        |

.row
  = render partial: 'agency_people/agency_people', object: @agency.agency_people

.row
  - if @agency.agency_people.empty?
    .col-sm-2.col-sm-offset-10#table_action_button
      = link_to 'Invite Person',                                    |
          new_user_invitation_path(person_type: 'AgencyPerson',     |
                   org_id: @agency.id),                             |
          method: :get, class: 'btn btn-primary btn-sm pull-right'  |
  - else
    .col-sm-3.col-sm-offset-3
      %a(data-toggle='collapse' href='#people_table'
          aria-expanded='true' aria-controls='people_table')
        Show/Hide People
    .col-sm-2.col-sm-offset-4#table_action_button
      = link_to 'Invite Person',                                    |
          new_user_invitation_path(person_type: 'AgencyPerson',     |
                   org_id: @agency.id),                             |
          method: :get, class: 'btn btn-primary btn-sm pull-right'  |

.row
  = render partial: 'companies/companies', object: @agency.companies

.row
  - if not @agency.companies.empty?
    .col-sm-3.col-sm-offset-3
      %a(data-toggle='collapse' href='#companies_table'
          aria-expanded='true' aria-controls='companies_table')
        Show/Hide Companies
