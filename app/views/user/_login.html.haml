= form_for User.new, :remote => true, :url => login_path, :html => {:class => 'login_form', :id => 'login_form', 'data-type' => 'json'} do |f|
  .help-block
  .form_field
    = f.label :email
    %br
    = f.text_field :email, :placeholder => 'Email Address'
  .form_field
    = f.label :password
    %br
    = f.password_field :password, :placeholder => 'Account Password'
  = button_tag 'Login', class: 'btn btn-primary submit-button', type: 'submit',autocomplete: 'off',
                  :data => {:disable_with => "<i class='fa fa-cog fa-spin'></i> Login...".html_safe}
%a{href: recover_user_index_path, class: 'btn btn-primary'} Forgot password