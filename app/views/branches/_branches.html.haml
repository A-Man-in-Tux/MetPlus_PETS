#branches_table
  %table.table.table-hover
    %thead
      %tr
        %td
          %strong Code
        %td
          %strong City
        %td
          %strong Street
        %td
          %strong Zipcode
    %tbody
      - @branches.each do |branch|
        %tr
          %td
            = link_to "#{branch.code}", branch_path(branch)
          - if branch.address
            %td
              = branch.address.city
            %td
              = branch.address.street
            %td
              = branch.address.zipcode
          - else
            %td
            %td
            %td
  = will_paginate @branches, param_name: 'branches_page', |
                     params: {data_type: 'branches'}      |
