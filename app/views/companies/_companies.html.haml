#companies_table
  %table.table.table-bordered
    %thead
      %tr
        %td
          %strong Name
        %td
          %strong Address
        %td
          %strong Status
    %tbody
      - @companies.each do |company|
        %tr
          %td
            - if company.status == Company::STATUS[:PND]
              = link_to company.name, company_registration_path(company)
            - else
              = link_to company.name, company_path(company)
          %td
            = single_line_address(company.addresses.first)
          %td
            = company.status
  = will_paginate @companies, param_name: 'companies_page', |
                      params: {data_type: 'companies'}      |
